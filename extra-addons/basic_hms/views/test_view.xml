<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_dialog_form">
            <field name="name">my.dialog.form</field>
            <field name="model">my.dialog</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_dialog_tree">
            <field name="name">my.dialog.tree</field>
            <field name="model">my.dialog</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
                <form>
                    <group>
                        <!-- 尚未完成model -->
                        <button name="goto_other_view" string="轉到其他視圖" type="object" class="oe_highlight"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_dialog">
            <field name="name">Dialog</field>
            <field name="res_model">my.dialog</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Test" id="menu_test"
            parent="main_menu_test" action="action_dialog"/>
    </data>
</odoo>